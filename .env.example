# Skills Agent 环境变量配置
# 复制此文件为 .env 并填入你的配置

# Azure AI Foundry:                                                                                                                                                                                                                                                                                                                          
CLAUDE_PROVIDER=azure_foundry                                                                                                                                                                                                                                                                                                              
ANTHROPIC_FOUNDRY_BASE_URL=https://<resource>.services.ai.azure.com/anthropic                                                                                                                                                                                                                                                              
ANTHROPIC_FOUNDRY_API_KEY=your-api-key                                                                                                                                                                                                                                                                                                     
CLAUDE_MODEL=claude-sonnet-4-5  # deployment name                                                                                                                                                                                                                                                                                          


# AUTH_TOKEN (api key)
ANTHROPIC_AUTH_TOKEN=your-api-key

# 自定义 API Base URL（用于代理或自定义端点）
# 注意：只填根地址，不要包含 /v1/messages
# ANTHROPIC_BASE_URL=https://api.anthropic.com

# 默认使用的模型（可选值: claude-sonnet-4-20250514, claude-opus-4-20250514 等）
CLAUDE_MODEL=claude-sonnet-4-5

# 最大对话轮数限制
MAX_TURNS=20

# 权限模式 (default, acceptEdits, bypassPermissions)
PERMISSION_MODE=bypassPermissions

ADF_RESOURCE_GROUP=                                                                                                                                                   
ADF_FACTORY_NAME=
USE_WORKSPACE=True                                                                                                                                             
