# Skills Agent Environment Configuration
# Copy this file to .env and fill in your settings

CLAUDE_PROVIDER=azure_foundry                                                                                                                                                                                                                                                                                                              

# Anthropic Configurations
ANTHROPIC_AUTH_TOKEN=your-api-key
# Default model (options: claude-sonnet-4-20250514, claude-opus-4-20250514, etc.)
CLAUDE_MODEL=claude-sonnet-4-5
ANTHROPIC_BASE_URL=https://api.anthropic.com


# Azure AI Foundry Configurations:                                                                                                                                                                                                                                                                                                                          
ANTHROPIC_FOUNDRY_BASE_URL=https://<resource>.services.ai.azure.com/anthropic                                                                                                                                                                                                                                                              
ANTHROPIC_FOUNDRY_API_KEY=your-api-key                                                                                                                                                                                                                                                                                                     
CLAUDE_MODEL=claude-sonnet-4-5  # deployment name                                                                                                                                                                                                                                                                                          


# Maximum conversation turn limit
MAX_TURNS=20

# Permission mode (default, acceptEdits, bypassPermissions)
PERMISSION_MODE=bypassPermissions

# ADF targets are configured in adf_agent/gatekeeper.py (ADF_TARGETS dict)

USE_WORKSPACE=True

# MLflow tracking (leave empty to use local mlflow.db)
MLFLOW_TRACKING_URI=
